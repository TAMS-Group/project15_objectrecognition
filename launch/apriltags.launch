<launch>
  <!--
    rosrun dynamic_reconfigure dynparam set /camera/driver data_skip X
    Use to skip X frames to reduce the frame rate
    rosrun dynamic_reconfigure dynparam set /camera/driver color_mode X
    Use to change the color mode. Only few color_modes work.
  -->
  <param name="/camera/driver/data_skip" value="1" />
  <include file="$(find openni2_launch)/launch/openni2.launch">
    <arg name="depth_registration" value="true"/>
    <arg name="color_depth_synchronization" value="true"/>
    <!--<arg name="color_mode" value="1"/>-->
  </include>

  <node pkg="apriltags_ros" type="apriltag_detector_node" name="apriltag_detector" output="screen">
    <rosparam param="tag_descriptions">[
      {id: 0, size: 0.14},
      {id: 1, size: 0.14, frame_id: a_frame},
      {id: 2, size: 0.14},
      {id: 3, size: 0.14},
      {id: 4, size: 0.14},
      {id: 5, size: 0.163513}]
    </rosparam>
  <remap from="/image_rect" to="/camera/rgb/image_raw"/>
  <remap from="/camera_info" to="/camera/rgb/camera_info"/>
  </node>
</launch>
